<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Mostrar información del pedido -->
    <TextView
        android:id="@+id/textViewNumeroPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Pedido: " />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: " />

    <!-- Botones para seleccionar tiempo de entrega -->
    <Button
        android:id="@+id/buttonEntrega30Min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En 30 Minutos" />

    <Button
        android:id="@+id/buttonEntrega1Hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En 1 Hora" />

    <!-- Otros elementos según sea necesario -->

</LinearLayout>
