<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#937F84"
    tools:context=".controlador.InicioSesion">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="224dp"
        android:layout_height="188dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dalunga240" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="328dp"
        android:layout_height="487dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fondo_redondeado"
        android:orientation="vertical"
        android:padding="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="cursive"
            android:text="Iniciar sesi칩n"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <EditText
            android:id="@+id/nombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/fondoiniciosesion"
            android:ems="10"
            android:hint="Correo electr칩nico"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/principal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <EditText
            android:id="@+id/claveDosRegistro"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/fondoiniciosesion"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="@color/principal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/buttonregistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botones"
            android:text="Iniciar sesi칩n"
            android:textColor="@color/principaloscuro" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/googlebutton"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/white"
            android:drawableStart="@mipmap/google30"
            android:padding="5dp"
            android:text="Google"
            android:textColor="@color/principaloscuro" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/registrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No tienes cuenta? Registrate" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
