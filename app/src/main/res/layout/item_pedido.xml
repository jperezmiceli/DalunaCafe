<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/numeroPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Pedido"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fechaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Venta"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <!-- Botón para expandir/colapsar -->
        <Button
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Más" />

        <!-- Sección expandible -->
        <LinearLayout
            android:id="@+id/expandableSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/totalVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Venta"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/direccionEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección de Entrega"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tiempoEstimadoEntrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo Estimado de Entrega"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
